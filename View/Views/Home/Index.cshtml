@{
    ViewBag.Title = ControllerLayer.StaticTest.Test;
}

<div class="jumbotron">
    <h1>Movies</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @{
        ControllerLayer.iSearchMediaManager searcher = new ControllerLayer.SearchMediaManager();
        IList<ControllerLayer.MediaRow> media = searcher.MakeMediaQuery(" ");
        for (int i = 0; i < media.Count; i++)
        {
            <div class="col-md-4">
                <div class="card bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">@media[i].Title</div>
                    <div class="card-body">
                        <h5 class="card-title">Directed by</h5>
                        <p class="card-text">@media[i].Director</p>
                        <h5 class="card-title">Directed by</h5>
                        <p class="card-text">@media[i].Language</p>
                        <h5 class="card-title">Genre</h5>
                        <p class="card-text">@media[i].Genre</p>
                        <h5 class="card-title">Released</h5>
                        <p class="card-text">@media[i].Year</p>
                    </div>
                </div>
                <h2></h2>
                <p>
                </p>
            </div>
        }
    }
    
</div>